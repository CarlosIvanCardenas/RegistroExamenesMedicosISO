@model ExamenesMedicos.Models.SearchModel
@{
    ViewData["Title"] = "Buscar Documento";
}

<div class="container">
    <div class="page-header clearfix detailHeading">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>
<br/>
<div class="container">
    <div class="jumbotron" style="padding-bottom:8%">
        <h3>Detalles: </h3>
        <br>
        <form method="post" id="searchForm" enctype="multipart/form-data" class="form-inline">
            <div class="form-row">
                <div class="form-group col-md-5">
                    <label for="tipoFormato">Tipo de Formato: </label>
                    <select id="tipoFormato" asp-for="Tipo" onchange="CheckTipo()" class="custom-select" style="width: 100%" required>
                        <option value="" disabled selected>Selecciona el tipo de formato</option>
                        <option value="ExamenMedicoAnual">Examen Medico Anual</option>
                        <option value="ExamenVibraciones">Examen de Vibraciones</option>
                        <option value="ExamenMedicoIngreso">Examen Medico Ingreso</option>
                        <option value="ExamenVisual">Examen Visual</option>
                        <option value="ExamenMedicoCargas">Examen Medico Cargas</option>
                        <option value="Audiometria">Audiometria</option>
                        <option value="ExamenAntialcohol">Antialcohol</option>
                        <option value="ExamenAntidoping">Antidoping</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <label for="fecha">Fecha: </label>
                    <br/>
                    <input id="fecha" asp-for="Fecha" type="date" value='@DateTime.Today.ToString("yyyy-MM-dd")' class="form-control">
                </div>
                <div class="form-group col-md-5">
                    <label for="fichaEmpleado">FichaEmpleado: </label>
                    <input id="fichaEmpleado" asp-for="FichaEmpleado" type="text" class="form-control" style="width:100%" placeholder="Ingrese ficha de empleado" required>
                </div>
            </div>
            <div class="clearfix"></div>
            <br>
            <div class="form-group col-md-12">
                <div style="text-align: center;" >
                    <button type="submit" class="btn btn-block btn-warning">Buscar</button>
                </div>
            </div>
            @Html.AntiForgeryToken()
        </form>
        
        <div id="SearchResult" ></div>
        
    </div>
</div>

<script type="text/javascript">
    function CheckTipo() {
        let select = document.getElementById("tipoFormato");
        let value = select.options[select.selectedIndex].value;
        let ficha = document.getElementById("fichaEmpleado");
        console.log(value);
        if (value == "ExamenMedicoAnual") {
            ficha.disabled = true;
        } else {
            ficha.disabled = false;
        }
    }
</script>

@section Scripts
{
    <script>
        $(document).ready(function() {
            $('#searchForm').submit(function() {
                $.ajax({
                    method: "POST",
                    url: "/Home/_SearchResult",
                    data: $(this).serialize(),
                    success: function(result) {
                        $('#SearchResult').html(result);
                    }
                });
            });
        });
    </script>
}
